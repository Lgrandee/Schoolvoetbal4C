<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="school.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:school"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock Text="School Voetbal" 
               FontSize="48" 
               FontWeight="Bold" 
               TextAlignment="Center" 
               Margin="0,40,0,20" />

        <Frame x:ConnectionId='2' x:Name="MainFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <StackPanel  Spacing="20" HorizontalAlignment="Right" VerticalAlignment="Bottom">

            <Button x:ConnectionId='3' Content="Go to Betting" 
                Width="250" 
                Height="60" 
                Background="Blue"
                Foreground="White" 
                FontSize="16" 
                CornerRadius="10" 
                                       />

            <Button x:ConnectionId='4' Content="View Leaderboard" 
                Width="250" 
                Height="60" 
                Background="Blue"
                Foreground="White" 
                FontSize="16" 
                CornerRadius="10" 
                                           />
        </StackPanel>
    </Grid>
</Window>

